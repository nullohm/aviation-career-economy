<Window x:Class="Ace.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Ace.App.Views"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Aviation Career Economy"
        Icon="pack://application:,,,/app.ico"
        Width="1200"
        Height="800"
        WindowStyle="None"
        Background="{DynamicResource BgPrimary}"
        Foreground="{DynamicResource ForegroundBrush}"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32" CornerRadius="0" GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <DockPanel>
        <Border DockPanel.Dock="Top" Background="{DynamicResource CardBg}" Height="32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0" Grid.Column="0">
                    <TextBlock FontSize="13" Style="{StaticResource HeadingText}" Text="Aviation Career Economy" />
                    <TextBlock x:Name="TxtVersion" FontSize="11" Foreground="{DynamicResource SubtleForegroundBrush}"
                               VerticalAlignment="Center" Margin="8,0,0,0" />
                </StackPanel>

                <Grid Grid.Column="1" Background="Transparent" MouseDown="Titlebar_MouseDown" />

                <StackPanel shell:WindowChrome.IsHitTestVisibleInChrome="True" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Margin="0,0,8,0">
                    <Button Name="BtnMin" Width="36" Height="24" Content="{StaticResource IconMinimize}" Click="BtnMin_Click" ToolTip="Minimize" Style="{StaticResource WindowControlButtonStyle}" />
                    <Button Name="BtnMax" Width="36" Height="24" Content="{StaticResource IconMaximize}" Click="BtnMax_Click" ToolTip="Maximize" Style="{StaticResource WindowControlButtonStyle}" />
                    <Button Name="BtnClose" Width="36" Height="24" Content="{StaticResource IconClose}" Click="BtnClose_Click" ToolTip="Close" Style="{StaticResource WindowCloseButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border DockPanel.Dock="Left" Width="64" Background="{DynamicResource BgPrimary}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,8,0,0">
                <Button Name="BtnHome" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconHome}" ToolTip="Dashboard" Click="OnHomeClicked" Tag="Selected"/>
                <Button Name="BtnFlightplan" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconFlightplan}" ToolTip="Flightplan" Click="OnFlightplanClicked" />
                <Button Name="BtnFBO" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconFBO}" ToolTip="FBO" Click="OnFBOClicked" />
                <Button Name="BtnHangar" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconHangar}" ToolTip="Hangar" Click="OnHangarClicked" />
                <Button Name="BtnPersonnel" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconPersonnel}" ToolTip="Personnel" Click="OnPersonnelClicked" />
                <Button Name="BtnMarket" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconMarket}" ToolTip="Aircraft Market" Click="OnMarketClicked" />
                <Button Name="BtnFlights" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconStatistics}" ToolTip="Statistics" Click="OnFlightsClicked" />
                <Button Name="BtnBank" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconFinance}" ToolTip="Finance" Click="OnBankClicked" />
                <Button Name="BtnAchievements" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconAchievements}" ToolTip="Achievements" Click="OnAchievementsClicked" />
                <Button Name="BtnManual" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconManual}" ToolTip="User Manual" Click="OnManualClicked" />
                <Button Name="BtnSettings" Style="{StaticResource NavButtonStyle}" Content="{StaticResource IconSettings}" ToolTip="Settings" Click="OnSettingsClicked" />
            </StackPanel>
        </Border>

        <Grid Background="{DynamicResource BgSecondary}" Margin="0">
            <ContentControl x:Name="MainContent" Margin="8" />
        </Grid>
    </DockPanel>
</Window>
