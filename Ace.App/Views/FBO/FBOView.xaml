<UserControl x:Class="Ace.App.Views.FBO.FBOView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
             xmlns:controls="clr-namespace:Ace.App.Controls"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{StaticResource CardBg}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0" Text="FBO Management"
                           Style="{StaticResource HeadingText}"
                           FontSize="20"
                           VerticalAlignment="Center"/>

                <!-- ICAO Input -->
                <TextBox Grid.Column="2" x:Name="TxtICAO"
                         Width="70"
                         CharacterCasing="Upper"
                         MaxLength="4"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         FontSize="14"
                         FontWeight="SemiBold"
                         Text="{Binding ICAOInput, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Airport Info Button -->
                <Button Grid.Column="4" x:Name="BtnAirportInfo"
                        Content="â„¹"
                        Width="28" Height="28"
                        Padding="0"
                        FontSize="14"
                        Click="BtnAirportInfo_Click"
                        IsEnabled="False"
                        ToolTip="Airport Info"/>

                <!-- FBO Type ComboBox -->
                <ComboBox Grid.Column="6" x:Name="CmbFBOType"
                          Width="130"
                          VerticalAlignment="Center"
                          SelectedValue="{Binding SelectedFBOType}"
                          SelectedValuePath="Content">
                    <ComboBoxItem>Local</ComboBoxItem>
                    <ComboBoxItem>Regional</ComboBoxItem>
                    <ComboBoxItem>International</ComboBoxItem>
                </ComboBox>

                <!-- Rent FBO Button -->
                <Button Grid.Column="8"
                        Content="Rent FBO"
                        Click="BtnRentFBO_Click"
                        Width="100"
                        Style="{StaticResource SuccessButtonStyle}"/>

                <!-- Stats Badge -->
                <Border Grid.Column="10"
                        Background="{StaticResource BgSecondary}"
                        CornerRadius="4"
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TxtFBOCount"
                                   Text="0 FBOs"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text=" â€¢ " Foreground="{StaticResource SubtleForegroundBrush}"/>
                        <TextBlock x:Name="TxtTotalCost"
                                   Text="â‚¬0/mo"
                                   Foreground="{StaticResource SubtleForegroundBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Map Container -->
        <Grid Grid.Row="1">
            <!-- Map -->
            <mapsui:MapControl x:Name="MapControl"/>

            <!-- Floating: FBO List (links, einklappbar) -->
            <Border x:Name="FBOListPanel"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="16"
                    Width="280"
                    MaxHeight="500"
                    Background="{StaticResource CardBg}"
                    CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.3" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header (klickbar) -->
                    <Border Grid.Row="0"
                            Background="{StaticResource BgSecondary}"
                            CornerRadius="8,8,0,0"
                            Padding="12,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="FBOListHeader_MouseDown">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="TxtExpandIcon" Text="â–¼" FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" x:Name="TxtFBOListHeader" Text="Your FBOs (0)"
                                       FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- FBO Liste -->
                    <ScrollViewer Grid.Row="1"
                                  x:Name="FBOListScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="400">
                        <ItemsControl x:Name="FBOListItems" ItemsSource="{Binding FBOs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent"
                                            Padding="12,8"
                                            Cursor="Hand"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="0,0,0,1"
                                            MouseLeftButtonUp="OnFBOListItemClick">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- ICAO + Type Badge + Aircraft Badge + Route Slots -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock Text="{Binding ICAO}"
                                                           FontWeight="Bold"
                                                           FontSize="14"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           Margin="0,0,8,0"/>
                                                <Border x:Name="TypeBadge" CornerRadius="3" Padding="6,2">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Type}" Value="International">
                                                                    <Setter Property="Background" Value="#E91E63"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="Regional">
                                                                    <Setter Property="Background" Value="#2196F3"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Type}" FontSize="10" Foreground="White"/>
                                                </Border>
                                                <Border CornerRadius="3"
                                                        Padding="6,2"
                                                        Margin="6,0,0,0"
                                                        Visibility="{Binding HasAircraft, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#22C55E"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasUnassignedAircraft}" Value="True">
                                                                    <Setter Property="Background" Value="#EAB308"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding AircraftCountText}"
                                                               FontSize="10"
                                                               Foreground="White"/>
                                                </Border>
                                                <!-- Route Slots Badge -->
                                                <Border CornerRadius="3"
                                                        Padding="6,2"
                                                        Margin="6,0,0,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#22C55E"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRouteFull}" Value="True">
                                                                    <Setter Property="Background" Value="#EF4444"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding RouteSlotText}"
                                                                   FontSize="10"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"/>
                                                        <TextBlock Text=" Routes"
                                                                   FontSize="10"
                                                                   Foreground="White"
                                                                   Opacity="0.8"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <!-- Airport Name -->
                                            <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                                       Text="{Binding AirportName}"
                                                       FontSize="12"
                                                       Foreground="{StaticResource SubtleForegroundBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="200"/>

                                            <!-- Monthly Cost -->
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                       Text="{Binding TotalMonthlyCost}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Floating: FBO Details (rechts) -->
            <Border x:Name="FBODetailsPanel"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="16"
                    Width="360"
                    Visibility="Collapsed"
                    Background="{StaticResource CardBg}"
                    CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.3" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0"
                            Background="{StaticResource BgSecondary}"
                            CornerRadius="8,8,0,0"
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="TxtDetailICAO"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}"
                                               Margin="0,0,10,0"/>
                                    <ComboBox x:Name="CmbDetailFBOType"
                                              Width="120"
                                              Height="26"
                                              VerticalAlignment="Center"
                                              SelectionChanged="CmbDetailFBOType_SelectionChanged">
                                        <ComboBoxItem Tag="Local">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="#4CAF50" CornerRadius="3" Padding="6,2" VerticalAlignment="Center">
                                                    <TextBlock Text="Local" FontSize="10" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                        </ComboBoxItem>
                                        <ComboBoxItem Tag="Regional">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="#2196F3" CornerRadius="3" Padding="6,2" VerticalAlignment="Center">
                                                    <TextBlock Text="Regional" FontSize="10" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                        </ComboBoxItem>
                                        <ComboBoxItem Tag="International">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="#E91E63" CornerRadius="3" Padding="6,2" VerticalAlignment="Center">
                                                    <TextBlock Text="International" FontSize="10" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                        </ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                                <TextBlock x:Name="TxtDetailAirportName"
                                           FontSize="13"
                                           Foreground="{StaticResource SubtleForegroundBrush}"
                                           Margin="0,4,0,0"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                            <Button Grid.Column="1" Content="{StaticResource IconClose}"
                                    Width="28" Height="28"
                                    Click="CloseDetailsPanel_Click"
                                    Style="{StaticResource WindowCloseButtonStyle}"
                                    VerticalAlignment="Top"/>
                        </Grid>
                    </Border>

                    <!-- Airport Image -->
                    <Border Grid.Row="1"
                            Height="140"
                            Margin="12,12,12,0"
                            CornerRadius="6"
                            Background="{StaticResource BgSecondary}"
                            Cursor="Hand"
                            ToolTip="Click to change airport image"
                            MouseLeftButtonUp="AirportImage_Click">
                        <Grid ClipToBounds="True">
                            <Image x:Name="ImgAirport"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            <mapsui:MapControl x:Name="AirportMapPreview"
                                               Visibility="Collapsed"
                                               IsHitTestVisible="False"/>
                            <Border Background="#40000000"
                                    VerticalAlignment="Bottom"
                                    Padding="8,4">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="ðŸ“·"
                                               FontSize="12"
                                               Foreground="White"
                                               Opacity="0.8"
                                               VerticalAlignment="Center"
                                               Margin="0,0,4,0"/>
                                    <TextBlock Text="Change"
                                               FontSize="11"
                                               Foreground="White"
                                               Opacity="0.8"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Terminal Section -->
                    <Border Grid.Row="2" Padding="16,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                        <StackPanel>
                            <TextBlock Text="Terminal" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="CmbTerminalSize"
                                          Height="32"
                                          SelectionChanged="CmbTerminalSize_SelectionChanged"/>
                                <TextBlock Grid.Column="1"
                                           x:Name="TxtTerminalCost"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource AccentBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Services Section -->
                    <Border Grid.Row="3" Padding="16,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                        <StackPanel>
                            <TextBlock Text="Services" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,10"/>
                            <CheckBox x:Name="ChkRefueling" Margin="0,4" Click="ServiceCheckbox_Click"/>
                            <CheckBox x:Name="ChkHangar" Margin="0,4" Click="ServiceCheckbox_Click"/>
                            <CheckBox x:Name="ChkCatering" Margin="0,4" Click="ServiceCheckbox_Click"/>
                            <CheckBox x:Name="ChkGroundHandling" Margin="0,4" Click="ServiceCheckbox_Click"/>
                            <CheckBox x:Name="ChkDeIcing" Margin="0,4" Click="ServiceCheckbox_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Cost Summary -->
                    <Border Grid.Row="4" Padding="16,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Total Monthly Cost" FontSize="12" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                <TextBlock x:Name="TxtTotalMonthlyCost"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="TxtBaseRent" FontSize="11" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                <TextBlock x:Name="TxtServicesCost" FontSize="11" Foreground="{StaticResource SubtleForegroundBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Actions -->
                    <Border Grid.Row="5" Padding="16,12">
                        <Button Content="Save Changes"
                                Click="BtnSaveChanges_Click"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Height="36"
                                HorizontalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Unified Legend Panel (Left Bottom) -->
            <controls:MapLegendPanelControl x:Name="LegendPanel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="16,0,0,48"/>

            <!-- Scale Control (Left Bottom) -->
            <controls:MapScaleControl x:Name="ScaleControl" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="16,0,0,16"/>

            <!-- Map Layer Toggle (Center Bottom) -->
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,52"
                    Background="{StaticResource CardBg}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="StreetLayerButton"
                            Content="Street"
                            Width="70"
                            Height="32"
                            FontSize="11"
                            Margin="0,0,2,0"
                            Click="StreetLayerButton_Click"
                            Style="{StaticResource IconButtonStyle}"/>
                    <Button x:Name="TerrainLayerButton"
                            Content="Terrain"
                            Width="70"
                            Height="32"
                            FontSize="11"
                            Margin="0,0,2,0"
                            Click="TerrainLayerButton_Click"
                            Style="{StaticResource IconButtonStyle}"/>
                    <Button x:Name="SatelliteLayerButton"
                            Content="Satellite"
                            Width="70"
                            Height="32"
                            FontSize="11"
                            Margin="0,0,2,0"
                            Click="SatelliteLayerButton_Click"
                            Style="{StaticResource IconButtonStyle}"/>
                    <Border Width="1" Height="20" Background="{StaticResource BorderBrush}" Margin="4,0"/>
                    <Button x:Name="MeasureDistanceButton"
                            Content="ðŸ“"
                            Width="36"
                            Height="32"
                            FontSize="14"
                            Click="MeasureDistanceButton_Click"
                            ToolTip="Measure distance (click two points)"
                            Style="{StaticResource IconButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- Distance Measurement Display -->
            <Border x:Name="MeasureDistancePanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,16,0,0"
                    Background="{StaticResource CardBg}"
                    BorderBrush="{StaticResource AccentBrush}"
                    BorderThickness="2"
                    CornerRadius="6"
                    Padding="16,10"
                    Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.4" Color="Black"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="MeasureDistanceText" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Button Content="Ã—"
                            FontSize="14"
                            Width="24"
                            Height="24"
                            Margin="12,0,0,0"
                            Click="ClearMeasurement_Click"
                            ToolTip="Clear measurement"
                            Style="{StaticResource IconButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- Map Hint -->
            <Border x:Name="MapHintBorder"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,16"
                    Background="{StaticResource CardBg}"
                    CornerRadius="4"
                    Padding="12,6"
                    Opacity="0.85">
                <TextBlock x:Name="MapHintText"
                           Text="Right-click airport to rent FBO â€¢ Click FBO to edit â€¢ Scroll to zoom"
                           FontSize="12"
                           Foreground="{StaticResource SubtleForegroundBrush}"/>
            </Border>

            <!-- Map Attribution (Bottom Right) -->
            <controls:MapAttributionControl x:Name="MapAttribution" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,16,16"/>
        </Grid>
    </Grid>
</UserControl>
