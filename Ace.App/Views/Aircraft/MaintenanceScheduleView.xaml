<Window x:Class="Ace.App.Views.Aircraft.MaintenanceScheduleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Maintenance Schedule"
        WindowStyle="None"
        Background="{StaticResource BgPrimary}"
        Foreground="{StaticResource ForegroundBrush}"
        Width="800"
        Height="650"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32" CornerRadius="0" GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource CardBg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <TextBlock Text="Maintenance Schedule - " FontSize="13" Style="{StaticResource HeadingText}"/>
                    <TextBlock Text="{Binding Registration}" FontSize="13" Style="{StaticResource HeadingText}" Foreground="{StaticResource AccentBrush}"/>
                </StackPanel>

                <Button Grid.Column="1" Name="BtnClose" Width="36" Height="24" Content="{StaticResource IconClose}"
                        Click="BtnClose_Click" ToolTip="Close"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,8,0"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
            <StackPanel Margin="20">
                <Border Background="{StaticResource CardBg}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="{Binding TypeVariant}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Category: " Foreground="{StaticResource SubtleForegroundBrush}"/>
                                <TextBlock Text="{Binding CategoryName}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="Balance" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                            <TextBlock FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBrush}">
                                <Run Text="{Binding Balance, StringFormat='{}{0:N0}'}"/>
                                <Run Text="â‚¬"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Background="{StaticResource CardBg}" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                        Visibility="{Binding IsInMaintenance, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Current Maintenance" Style="{StaticResource HeadingText}" FontSize="16" Margin="0,0,0,15"/>
                        <Border Background="#F97316" CornerRadius="6" Padding="15">
                            <Grid>
                                <TextBlock Text="{Binding CurrentMaintenanceInfo}" FontWeight="SemiBold" Foreground="White"/>
                                <Button Content="Complete Maintenance" HorizontalAlignment="Right"
                                        Command="{Binding CompleteMaintenanceCommand}"
                                        Padding="15,8" BorderThickness="0" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#22C55E"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#16A34A"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource CardBg}" CornerRadius="8" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Available Maintenance Checks" Style="{StaticResource HeadingText}" FontSize="16" Margin="0,0,0,15"/>

                        <TextBlock Grid.Row="1" Text="Select a check to schedule maintenance. Checks are sorted by urgency."
                                   Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" Margin="0,0,0,15"/>

                        <ItemsControl Grid.Row="2" ItemsSource="{Binding AvailableChecks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="15" Margin="0,0,0,10"
                                            Cursor="Hand" MouseLeftButtonUp="OnCheckClicked">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Width="4" CornerRadius="2" Background="{Binding StatusColor}" Margin="0,0,10,0"/>

                                            <StackPanel Grid.Column="1">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14" Margin="0,0,10,0"/>
                                                    <Border CornerRadius="3" Padding="6,2" Background="{Binding StatusColor}">
                                                        <TextBlock Text="{Binding UrgencyText}" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="12" Margin="0,0,20,0">
                                                        <Run Text="Status:" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding StatusText, Mode=OneWay}" FontWeight="SemiBold"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Margin="0,0,20,0">
                                                        <Run Text="Last:" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding LastPerformedText, Mode=OneWay}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding CostText}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding DurationText}" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" HorizontalAlignment="Right" Margin="0,0,0,8"/>
                                                <Button Content="Schedule" Tag="{Binding}" Click="OnScheduleClick"
                                                        Padding="12,6" BorderThickness="0" Cursor="Hand">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                            <Setter Property="FontSize" Value="12"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#0284C7"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <Border Background="{StaticResource CardBg}" CornerRadius="8" Padding="20" Margin="0,20,0,0"
                        Visibility="{Binding SelectedCheck, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Selected Check" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SelectedCheck.Name}" FontWeight="Bold" FontSize="18"/>
                        </StackPanel>

                        <Button Grid.Column="1" Content="Schedule Maintenance"
                                Command="{Binding ScheduleCheckCommand}"
                                Padding="20,12" BorderThickness="0" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0284C7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
