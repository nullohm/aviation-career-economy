<Window x:Class="Ace.App.Views.Aircraft.AircraftDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Aircraft Details"
        WindowStyle="None"
        Background="{StaticResource BgPrimary}"
        Foreground="{StaticResource ForegroundBrush}"
        Width="900"
        Height="700"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32" CornerRadius="0" GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource CardBg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Aircraft Technical File" FontSize="13" Style="{StaticResource HeadingText}"
                           VerticalAlignment="Center" Margin="12,0,0,0"/>

                <Button Grid.Column="1" Name="BtnClose" Width="36" Height="24" Content="{StaticResource IconClose}"
                        Click="BtnClose_Click" ToolTip="Close"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,8,0"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Aircraft Header -->
                <Border Grid.Row="0" Background="{StaticResource CardBg}"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Aircraft Icon -->
                        <Border Grid.Column="0" Width="120" Height="120" CornerRadius="8"
                                Background="{StaticResource AccentBrush}"
                                Margin="0,0,30,0">
                            <Path Data="{StaticResource IconAircraft}"
                                  Fill="White"
                                  Stretch="Uniform"
                                  Width="60" Height="60"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>

                        <!-- Aircraft Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="{Binding Registration}"
                                          Style="{StaticResource HeadingText}"
                                          FontSize="28"
                                          Margin="0,0,15,0"/>
                                <Border Background="{Binding StatusColor}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Status}"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Text="{Binding TypeVariant}"
                                      FontSize="18"
                                      Foreground="{StaticResource SubtleForegroundBrush}"
                                      Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Home Base:" Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding HomeBase}" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Purchase Date:" Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PurchaseDate, StringFormat='dd.MM.yyyy'}" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Current Value:" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Foreground="{StaticResource AccentBrush}" FontWeight="Bold">
                                    <Run Text="{Binding CurrentValue, StringFormat='{}{0:N0}'}"/>
                                    <Run Text="€"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Performance & Specifications -->
                <Border Grid.Row="1" Background="{StaticResource CardBg}"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="Performance &amp; Specifications"
                                       Style="{StaticResource HeadingText}"
                                       FontSize="20" VerticalAlignment="Center"/>
                            <Button Content="Edit Specs"
                                    Command="{Binding EditSpecsCommand}"
                                    HorizontalAlignment="Right"
                                    Height="32"
                                    Padding="16,0"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#6B7280"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#9CA3AF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Max Passengers" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock Text="{Binding MaxPassengers}" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Max Cargo" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold">
                                            <Run Text="{Binding MaxCargoKg, StringFormat='{}{0:F0}'}"/>
                                            <Run Text="kg"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Cruise Speed" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold">
                                            <Run Text="{Binding CruiseSpeedKts, StringFormat='{}{0:F0}'}"/>
                                            <Run Text="kts"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Max Range" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold">
                                            <Run Text="{Binding MaxRangeNM, StringFormat='{}{0:F0}'}"/>
                                            <Run Text="NM"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Fuel Capacity" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold">
                                            <Run Text="{Binding FuelCapacityGal, StringFormat='{}{0:F0}'}"/>
                                            <Run Text="gal"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Fuel Burn Rate" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold">
                                            <Run Text="{Binding FuelBurnGalPerHour, StringFormat='{}{0:F1}'}"/>
                                            <Run Text="gal/h"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Operating Cost" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold">
                                            <Run Text="{Binding HourlyOperatingCost, StringFormat='{}{0:N0}'}"/>
                                            <Run Text="€/h"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Service Ceiling" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold">
                                            <Run Text="{Binding ServiceCeilingFt, StringFormat='{}{0:N0}'}"/>
                                            <Run Text="ft"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Flight Hours & Maintenance -->
                <Border Grid.Row="2" Background="{StaticResource CardBg}"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Flight Hours &amp; Maintenance"
                                   Style="{StaticResource HeadingText}"
                                   FontSize="20" Margin="0,0,0,15"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Total Flight Hours" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold">
                                            <Run Text="{Binding TotalFlightHours, StringFormat='{}{0:F1}'}"/>
                                            <Run Text="h"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Hours Since Maintenance" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{Binding MaintenanceWarningColor}" FontSize="18" FontWeight="SemiBold">
                                            <Run Text="{Binding HoursSinceLastMaintenance, StringFormat='{}{0:F1}'}"/>
                                            <Run Text="h"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Last Maintenance" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock Text="{Binding LastMaintenanceDate, StringFormat='dd.MM.yyyy'}"
                                                  HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="18" FontWeight="SemiBold"/>
                                    </Grid>
                                </Border>

                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Maintenance Complete" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" FontSize="18" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="-"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding MaintenanceCompletionDate}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="-"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0:dd.MM.yyyy}">
                                                    <Binding Path="MaintenanceCompletionDate"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <Button Content="Maintenance Schedule"
                                        Name="BtnMaintenanceSchedule"
                                        Click="BtnMaintenanceSchedule_Click"
                                        Height="50"
                                        Padding="12,8"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#F97316"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FB923C"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- FBO Assignment -->
                <Border Grid.Row="3" Background="{StaticResource CardBg}"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="FBO Assignment"
                                   Style="{StaticResource HeadingText}"
                                   FontSize="20" Margin="0,0,0,15"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <Border Background="{StaticResource BgPrimary}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Current Assignment" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource ForegroundBrush}" FontSize="16" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding AssignedFBOName}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding AssignedFBOName}" Value="">
                                                            <Setter Property="Text" Value="Not assigned"/>
                                                            <Setter Property="Foreground" Value="{StaticResource SubtleForegroundBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <Button Content="Remove from FBO"
                                        Command="{Binding RemoveFromFBOCommand}"
                                        Height="50"
                                        Padding="12,8"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#6B7280"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#9CA3AF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Select FBO" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AvailableFBOs}"
                                          SelectedItem="{Binding SelectedFBO}"
                                          DisplayMemberPath="DisplayName"
                                          Height="40"
                                          Margin="0,0,0,8"/>

                                <Button Content="Assign to FBO"
                                        Command="{Binding AssignToFBOCommand}"
                                        Height="50"
                                        Padding="12,8"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#8B5CF6"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#A78BFA"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
