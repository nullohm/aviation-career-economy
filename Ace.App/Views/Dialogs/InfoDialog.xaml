<Window x:Class="Ace.App.Views.Dialogs.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Info"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Foreground="{StaticResource ForegroundBrush}"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32" CornerRadius="8" GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <Border Background="{StaticResource BgPrimary}"
            BorderBrush="#50FFFFFF"
            BorderThickness="1"
            CornerRadius="8"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.6" ShadowDepth="4"/>
        </Border.Effect>
    <Grid MinWidth="350" MinHeight="120">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource CardBg}" CornerRadius="8,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TitleText" Text="Info" FontSize="13" Style="{StaticResource HeadingText}"
                           VerticalAlignment="Center" Margin="12,0,0,0"/>

                <Button Grid.Column="1" Name="BtnClose" Width="36" Height="24" Content="{StaticResource IconClose}"
                        Click="BtnClose_Click" ToolTip="Close"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,8,0"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <TextBlock x:Name="MessageText" TextWrapping="Wrap" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            <Button x:Name="BtnOk" Content="OK" Width="80" Height="32" Click="BtnOk_Click"/>
        </StackPanel>
    </Grid>
    </Border>
</Window>
