<Window x:Class="Ace.App.Views.Dialogs.EditPilotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:controls="clr-namespace:Ace.App.Controls"
        Title="Edit Pilot"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Foreground="{StaticResource ForegroundBrush}"
        Width="516"
        Height="396"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32" CornerRadius="8" GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <Border Background="{StaticResource BgPrimary}"
            BorderBrush="#50FFFFFF"
            BorderThickness="1"
            CornerRadius="8"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.6" ShadowDepth="4"/>
        </Border.Effect>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource CardBg}" CornerRadius="8,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <controls:RankBadgeControl x:Name="RankBadge" BadgeSize="Small" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TitleText" Text="Edit Pilot" FontSize="13" Style="{StaticResource HeadingText}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1" Name="BtnClose" Width="36" Height="24" Content="{StaticResource IconClose}"
                        Click="BtnClose_Click" ToolTip="Close"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,8,0"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20,20,20,10">
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Name" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtName" Height="40" FontSize="14"
                             Background="{StaticResource CardBg}"
                             Foreground="{StaticResource ForegroundBrush}"
                             CaretBrush="{StaticResource ForegroundBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Birthday" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" Margin="0,0,0,4"/>
                    <DatePicker x:Name="DateBirthday" Height="40" FontSize="14"
                                Background="{StaticResource CardBg}"
                                Foreground="{StaticResource ForegroundBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Total Flight Hours" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtFlightHours" Height="40" FontSize="14"
                             Background="{StaticResource CardBg}"
                             Foreground="{StaticResource ForegroundBrush}"
                             CaretBrush="{StaticResource ForegroundBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Total Distance (NM)" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtDistanceNM" Height="40" FontSize="14"
                             Background="{StaticResource CardBg}"
                             Foreground="{StaticResource ForegroundBrush}"
                             CaretBrush="{StaticResource ForegroundBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <CheckBox x:Name="ChkIsEmployed" Content="Is Employed" FontSize="14"
                              Foreground="{StaticResource ForegroundBrush}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="{StaticResource CardBg}" Padding="20" CornerRadius="0,0,8,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnCancel" Content="Cancel" Width="100" Height="36" Click="BtnCancel_Click" Margin="0,0,10,0"/>
                <Button x:Name="BtnSave" Content="Save" Width="100" Height="36" Click="BtnSave_Click"
                        Style="{StaticResource SuccessButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
    </Border>
</Window>
