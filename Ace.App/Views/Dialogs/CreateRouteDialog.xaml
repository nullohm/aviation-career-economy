<Window x:Class="Ace.App.Views.Dialogs.CreateRouteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Create Route"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Foreground="{StaticResource ForegroundBrush}"
        Width="466"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32" CornerRadius="8" GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <Border Background="{StaticResource BgPrimary}"
            BorderBrush="#50FFFFFF"
            BorderThickness="1"
            CornerRadius="8"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.6" ShadowDepth="4"/>
        </Border.Effect>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource CardBg}" CornerRadius="8,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Create Scheduled Route" FontSize="13" Style="{StaticResource HeadingText}"
                           VerticalAlignment="Center" Margin="12,0,0,0"/>

                <Button Grid.Column="1" Name="BtnClose" Width="36" Height="24" Content="{StaticResource IconClose}"
                        Click="BtnClose_Click" ToolTip="Close"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,8,0"/>
            </Grid>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="20">
            <!-- Origin FBO -->
            <TextBlock Text="Origin FBO" FontSize="12" Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,4"/>
            <Border Background="{StaticResource BgSecondary}" CornerRadius="4" Padding="12,8" Margin="0,0,0,16">
                <TextBlock x:Name="TxtOriginFBO" FontSize="14" FontWeight="SemiBold"/>
            </Border>

            <!-- Destination FBO -->
            <TextBlock Text="Destination FBO" FontSize="12" Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,4"/>
            <ComboBox x:Name="CmbDestinationFBO" Height="36" Margin="0,0,0,8"
                      DisplayMemberPath="DisplayName" SelectionChanged="CmbDestinationFBO_SelectionChanged"/>
            <TextBlock x:Name="TxtDestinationSlots" FontSize="11" Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,16"/>

            <!-- Aircraft Selection -->
            <TextBlock Text="Assign Aircraft (optional)" FontSize="12" Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,4"/>
            <ComboBox x:Name="CmbAircraft" Height="36" Margin="0,0,0,4"
                      DisplayMemberPath="DisplayName"/>
            <TextBlock x:Name="TxtAircraftInfo" FontSize="11" Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,16"/>

            <!-- Slot Info -->
            <Border Background="{StaticResource BgSecondary}" CornerRadius="4" Padding="12" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Slot Usage" FontSize="11" Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtOriginSlots" FontSize="12"/>
                    <TextBlock x:Name="TxtDestSlots" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            <Button x:Name="BtnCreate" Content="Create Route" Width="120" Height="32"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="BtnCreate_Click" Margin="0,0,10,0" IsEnabled="False"/>
            <Button Content="Cancel" Width="80" Height="32"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
    </Border>
</Window>
