<Window x:Class="Ace.App.Views.Dialogs.AirportInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Airport Information"
        Width="700" Height="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="40" CornerRadius="8" GlassFrameThickness="0" ResizeBorderThickness="5"/>
    </shell:WindowChrome.WindowChrome>

    <Border Background="{StaticResource BgPrimary}"
            BorderBrush="#50FFFFFF"
            BorderThickness="1"
            CornerRadius="8"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.6" ShadowDepth="4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource CardBg}" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <TextBlock x:Name="TxtTitle" Text="Airport Details"
                                   FontSize="16" FontWeight="Bold" Foreground="{StaticResource ForegroundBrush}"/>
                        <TextBlock x:Name="TxtIcao" Foreground="{StaticResource AccentBrush}" FontSize="14" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1" Name="BtnClose" Width="40" Height="28" Content="{StaticResource IconClose}"
                            Click="BtnClose_Click" ToolTip="Close"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,8,0"/>
                </Grid>
            </Border>

            <!-- Airport Info -->
            <Border Grid.Row="1" Background="{StaticResource CardBg}" Padding="16" Margin="16,16,16,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Location" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtLocation" Text="-" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}"/>
                        <TextBlock x:Name="TxtCoordinates" Text="-" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Elevation" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtElevation" Text="-" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Fuel" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12"/>
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="BadgeAvgas" Background="#4CAF50" CornerRadius="2" Padding="6,2" Margin="0,0,8,0" Visibility="Collapsed">
                                <TextBlock Text="AVGAS" FontSize="11" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <Border x:Name="BadgeJetfuel" Background="#2196F3" CornerRadius="2" Padding="6,2" Visibility="Collapsed">
                                <TextBlock Text="JET-A" FontSize="11" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <TextBlock x:Name="TxtNoFuel" Text="No Fuel" Foreground="{StaticResource SubtleForegroundBrush}" Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Scrollable Content -->
            <ScrollViewer x:Name="MainScrollViewer" Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="16">
                <StackPanel>
                    <!-- Runways -->
                    <TextBlock Text="Runways" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,12"/>
                    <Border Background="{StaticResource CardBg}" CornerRadius="4" Padding="12" Margin="0,0,0,20">
                        <DataGrid x:Name="RunwaysGrid" AutoGenerateColumns="False" IsReadOnly="True"
                                  Background="Transparent" BorderThickness="0"
                                  VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Runway" Binding="{Binding DisplayName}" Width="80"/>
                                <DataGridTextColumn Header="Dimensions" Binding="{Binding DimensionsDisplay}" Width="120"/>
                                <DataGridTextColumn Header="Surface" Binding="{Binding SurfaceDisplay}" Width="100"/>
                                <DataGridTextColumn Header="Heading" Binding="{Binding Heading, StringFormat={}{0:F0}}" Width="80"/>
                                <DataGridTextColumn Header="ILS" Binding="{Binding Ils1Ident}" Width="80"/>
                                <DataGridTextColumn Header="Lighting" Binding="{Binding LightingType}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- COM Frequencies -->
                    <TextBlock Text="COM Frequencies" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,12"/>
                    <Border Background="{StaticResource CardBg}" CornerRadius="4" Padding="12" Margin="0,0,0,20">
                        <DataGrid x:Name="FrequenciesGrid" AutoGenerateColumns="False" IsReadOnly="True"
                                  Background="Transparent" BorderThickness="0"
                                  VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Type" Binding="{Binding TypeDisplay}" Width="100"/>
                                <DataGridTextColumn Header="Frequency" Binding="{Binding FrequencyDisplay}" Width="120"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- ILS Systems -->
                    <TextBlock x:Name="TxtIlsHeader" Text="ILS Systems" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,12"/>
                    <Border x:Name="IlsPanel" Background="{StaticResource CardBg}" CornerRadius="4" Padding="12" Margin="0,0,0,20">
                        <DataGrid x:Name="IlsGrid" AutoGenerateColumns="False" IsReadOnly="True"
                                  Background="Transparent" BorderThickness="0"
                                  VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Runway" Binding="{Binding RunwayName}" Width="80"/>
                                <DataGridTextColumn Header="Ident" Binding="{Binding Ident}" Width="80"/>
                                <DataGridTextColumn Header="Frequency" Binding="{Binding FrequencyDisplay}" Width="120"/>
                                <DataGridTextColumn Header="GS" Binding="{Binding GlideSlopePitch, StringFormat={}{0:F1}}" Width="60"/>
                                <DataGridTextColumn Header="Category" Binding="{Binding CategoryDisplay}" Width="80"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <TextBlock x:Name="TxtNoIls" Text="No ILS systems available at this airport"
                               Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,20" Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>

            <!-- No Data Message -->
            <TextBlock x:Name="TxtNoData" Grid.Row="2"
                       Text="Airport data not available. Little Navmap database required."
                       Foreground="{StaticResource SubtleForegroundBrush}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="16" Visibility="Collapsed"/>

            <!-- Footer -->
            <Border Grid.Row="3" Background="{StaticResource CardBg}" Padding="16,12" CornerRadius="0,0,8,8">
                <Button Content="Close" Click="BtnClose_Click"
                        Style="{StaticResource RoundedButtonStyle}"
                        Width="100" Height="36" HorizontalAlignment="Right"/>
            </Border>
        </Grid>
    </Border>
</Window>
