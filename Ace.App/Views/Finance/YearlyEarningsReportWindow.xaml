<Window x:Class="Ace.App.Views.Finance.YearlyEarningsReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yearly Earnings Report"
        Width="1000" Height="620"
        MinWidth="900" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="8" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#E65100" Offset="0"/>
            <GradientStop Color="#FF8F00" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ProfitGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#1565C0" Offset="0"/>
            <GradientStop Color="#42A5F5" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2E"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#50FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="24" ShadowDepth="6" Opacity="0.7" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF8F00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFA726"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9E9E9E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F44336"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SummaryCard" TargetType="Border">
            <Setter Property="Background" Value="#353539"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource CardStyle}" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="20,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Yearly Earnings Report" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="TxtDate" FontSize="12" Foreground="#FFCC80" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="2" Content="{StaticResource IconClose}" Width="32" Height="32" Style="{StaticResource WindowCloseButtonStyle}" Click="OnCloseClick"/>
                </Grid>
            </Border>

            <!-- Summary Cards -->
            <Border Grid.Row="1" Background="#252528" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource SummaryCard}">
                        <StackPanel>
                            <TextBlock Text="DAYS" FontSize="9" Foreground="#9E9E9E" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="ðŸ“†" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="TxtDays" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource SummaryCard}">
                        <StackPanel>
                            <TextBlock Text="FLIGHT HOURS" FontSize="9" Foreground="#9E9E9E" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="â±ï¸" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="TxtTotalHours" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="h" FontSize="12" Foreground="#9E9E9E" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource SummaryCard}">
                        <StackPanel>
                            <TextBlock Text="DISTANCE" FontSize="9" Foreground="#9E9E9E" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="âœˆï¸" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="TxtTotalDistance" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="NM" FontSize="10" Foreground="#9E9E9E" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource SummaryCard}">
                        <StackPanel>
                            <TextBlock Text="REVENUE" FontSize="9" Foreground="#9E9E9E" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="ðŸ“ˆ" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="TxtTotalRevenue" FontSize="20" FontWeight="Bold" Foreground="#4CAF50"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="4" Style="{StaticResource SummaryCard}">
                        <StackPanel>
                            <TextBlock Text="COSTS" FontSize="9" Foreground="#9E9E9E" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="ðŸ“‰" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="TxtTotalCosts" FontSize="20" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="5" Background="{StaticResource ProfitGradient}" CornerRadius="8" Padding="12,10" Margin="4,0">
                        <StackPanel>
                            <TextBlock Text="NET PROFIT" FontSize="9" Foreground="#B3E5FC" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="ðŸ’°" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="TxtTotalProfit" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Monthly Breakdown -->
            <Border Grid.Row="2" Background="#1E1E21" Padding="16,8,16,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Monthly Summary" FontSize="13" FontWeight="SemiBold"
                               Foreground="#B0BEC5" Margin="0,0,0,10"/>

                    <Border Grid.Row="1" Background="#252528" CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Headers -->
                            <Border Grid.Row="0" Background="#2D2D32" CornerRadius="8,8,0,0" Padding="12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Month" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10"/>
                                    <TextBlock Grid.Column="1" Text="Days" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10" TextAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="Hours" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10" TextAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="Revenue" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10" TextAlignment="Right"/>
                                    <TextBlock Grid.Column="4" Text="Costs" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10" TextAlignment="Right"/>
                                    <TextBlock Grid.Column="5" Text="Profit" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10" TextAlignment="Right"/>
                                    <TextBlock Grid.Column="6" Text="Avg/Day" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10" TextAlignment="Right"/>
                                    <TextBlock Grid.Column="7" Text="Performance" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10" TextAlignment="Center" Margin="12,0,0,0"/>
                                </Grid>
                            </Border>

                            <!-- Data Rows -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="DetailsGrid">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="12,10" BorderBrush="#3A3A3E" BorderThickness="0,0,0,1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#2D2D32"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition Width="70"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Border Grid.Column="0" Background="#FF8F00" CornerRadius="4" Padding="8,3" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding MonthName}" FontWeight="SemiBold" Foreground="White" FontSize="11"/>
                                                    </Border>

                                                    <TextBlock Grid.Column="1" Text="{Binding Days}" Foreground="White" TextAlignment="Right" VerticalAlignment="Center" FontSize="11"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding FlightHours, StringFormat=N0}" Foreground="White" TextAlignment="Right" VerticalAlignment="Center" FontSize="11"/>
                                                    <TextBlock Grid.Column="3" Text="{Binding Revenue, StringFormat=â‚¬{0:N0}}" Foreground="#4CAF50" TextAlignment="Right" VerticalAlignment="Center" FontSize="11"/>
                                                    <TextBlock Grid.Column="4" Text="{Binding TotalCost, StringFormat=â‚¬{0:N0}}" Foreground="#EF5350" TextAlignment="Right" VerticalAlignment="Center" FontSize="11"/>

                                                    <TextBlock Grid.Column="5" TextAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" FontSize="11">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#42A5F5"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsProfitNegative}" Value="True">
                                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                        <TextBlock.Text>
                                                            <Binding Path="Profit" StringFormat="â‚¬{0:N0}"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>

                                                    <TextBlock Grid.Column="6" Text="{Binding AvgProfitPerDay, StringFormat=â‚¬{0:N0}}" Foreground="#90CAF9" TextAlignment="Right" VerticalAlignment="Center" FontSize="11"/>

                                                    <!-- Performance Bar -->
                                                    <Grid Grid.Column="7" Margin="12,0,4,0" VerticalAlignment="Center">
                                                        <Border Background="#3A3A3E" Height="6" CornerRadius="3"/>
                                                        <Border Height="6" CornerRadius="3" HorizontalAlignment="Left" Width="{Binding PerformanceWidth}">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsProfitNegative}" Value="True">
                                                                            <Setter Property="Background" Value="#F44336"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Cost Distribution -->
            <Border Grid.Row="3" Background="#252528" Padding="16,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Cost Distribution" FontSize="11" Foreground="#9E9E9E" Margin="0,0,0,8"/>

                    <Grid Grid.Row="1" Height="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="ColFuel" Width="*"/>
                            <ColumnDefinition x:Name="ColMaint" Width="*"/>
                            <ColumnDefinition x:Name="ColIns" Width="*"/>
                            <ColumnDefinition x:Name="ColCrew" Width="*"/>
                            <ColumnDefinition x:Name="ColOther" Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FF7043" CornerRadius="3,0,0,3"/>
                        <Border Grid.Column="1" Background="#FFA726"/>
                        <Border Grid.Column="2" Background="#FFCA28"/>
                        <Border Grid.Column="3" Background="#66BB6A"/>
                        <Border Grid.Column="4" Background="#42A5F5" CornerRadius="0,3,3,0"/>
                    </Grid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Border Width="10" Height="10" Background="#FF7043" CornerRadius="2" Margin="0,0,4,0"/>
                            <TextBlock x:Name="TxtFuelPercent" Foreground="#9E9E9E" FontSize="10"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Border Width="10" Height="10" Background="#FFA726" CornerRadius="2" Margin="0,0,4,0"/>
                            <TextBlock x:Name="TxtMaintPercent" Foreground="#9E9E9E" FontSize="10"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Border Width="10" Height="10" Background="#FFCA28" CornerRadius="2" Margin="0,0,4,0"/>
                            <TextBlock x:Name="TxtInsPercent" Foreground="#9E9E9E" FontSize="10"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Border Width="10" Height="10" Background="#66BB6A" CornerRadius="2" Margin="0,0,4,0"/>
                            <TextBlock x:Name="TxtCrewPercent" Foreground="#9E9E9E" FontSize="10"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="10" Height="10" Background="#42A5F5" CornerRadius="2" Margin="0,0,4,0"/>
                            <TextBlock x:Name="TxtOtherPercent" Foreground="#9E9E9E" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="4" Background="#1E1E21" CornerRadius="0,0,12,12" Padding="16,12">
                <Grid>
                    <TextBlock Text="Drag header to move" Foreground="#616161" FontSize="10" VerticalAlignment="Center"/>
                    <Button Content="Close" Style="{StaticResource ModernButton}" HorizontalAlignment="Right" Click="OnCloseClick"/>
                    <ResizeGrip HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-8,-4"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
