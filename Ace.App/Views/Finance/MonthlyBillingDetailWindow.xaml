<Window x:Class="Ace.App.Views.Finance.MonthlyBillingDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Billing Details"
        Width="750" Height="480"
        MinWidth="650" MinHeight="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.Resources>
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#4A148C" Offset="0"/>
            <GradientStop Color="#7B1FA2" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2E"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#50FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="24" ShadowDepth="6" Opacity="0.7" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#7B1FA2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#9C27B0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9E9E9E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F44336"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SummaryCard" TargetType="Border">
            <Setter Property="Background" Value="#353539"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource CardStyle}" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="20,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ“†" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Monthly Billing Report" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="TxtDate" FontSize="12" Foreground="#CE93D8" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="2" Content="{StaticResource IconClose}" Width="32" Height="32" Style="{StaticResource WindowCloseButtonStyle}" Click="OnCloseClick"/>
                </Grid>
            </Border>

            <!-- Summary Cards -->
            <Border Grid.Row="1" Background="#252528" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource SummaryCard}">
                        <StackPanel>
                            <TextBlock Text="FBO COSTS" FontSize="9" Foreground="#9E9E9E" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="ðŸ¢" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="TxtFBOCosts" FontSize="20" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource SummaryCard}">
                        <StackPanel>
                            <TextBlock Text="PILOT SALARIES" FontSize="9" Foreground="#9E9E9E" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="ðŸ‘¨â€âœˆï¸" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="TxtPilotCosts" FontSize="20" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#B71C1C" CornerRadius="8" Padding="12,10" Margin="4,0">
                        <StackPanel>
                            <TextBlock Text="TOTAL MONTHLY" FontSize="9" Foreground="#FFCDD2" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="ðŸ’¸" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="TxtTotalCosts" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Details Section -->
            <Border Grid.Row="2" Background="#1E1E21" Padding="16,8,16,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Billing Breakdown" FontSize="13" FontWeight="SemiBold"
                               Foreground="#B0BEC5" Margin="0,0,0,10"/>

                    <Border Grid.Row="1" Background="#252528" CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Headers -->
                            <Border Grid.Row="0" Background="#2D2D32" CornerRadius="8,8,0,0" Padding="12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Type" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10"/>
                                    <TextBlock Grid.Column="1" Text="Name" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10"/>
                                    <TextBlock Grid.Column="2" Text="Details" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10"/>
                                    <TextBlock Grid.Column="3" Text="Amount" FontWeight="SemiBold" Foreground="#9E9E9E" FontSize="10" TextAlignment="Right" Margin="0,0,4,0"/>
                                </Grid>
                            </Border>

                            <!-- Data Rows -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="DetailsGrid">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="12,10" BorderBrush="#3A3A3E" BorderThickness="0,0,0,1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#2D2D32"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Category Icon -->
                                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="16">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="ðŸ¢"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Category}" Value="Pilot">
                                                                        <Setter Property="Text" Value="ðŸ‘¨â€âœˆï¸"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <!-- Name with badge -->
                                                    <Border Grid.Column="1" CornerRadius="4" Padding="6,3" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#7B1FA2"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Category}" Value="Pilot">
                                                                        <Setter Property="Background" Value="#1976D2"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="White" FontSize="11"/>
                                                    </Border>

                                                    <TextBlock Grid.Column="2" Text="{Binding Description}" Foreground="#B0BEC5" VerticalAlignment="Center" FontSize="11" TextTrimming="CharacterEllipsis"/>

                                                    <TextBlock Grid.Column="3" Text="{Binding Amount, StringFormat='-â‚¬{0:N0}'}" Foreground="#EF5350" TextAlignment="Right" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="12" Margin="0,0,4,0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3" Background="#1E1E21" CornerRadius="0,0,12,12" Padding="16,12">
                <Grid>
                    <TextBlock Text="Drag header to move" Foreground="#616161" FontSize="10" VerticalAlignment="Center"/>
                    <Button Content="Close" Style="{StaticResource ModernButton}" HorizontalAlignment="Right" Click="OnCloseClick"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
