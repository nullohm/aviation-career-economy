<Window x:Class="Ace.App.Views.Pilots.PilotDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Pilot Details"
        WindowStyle="None"
        Background="{StaticResource BgPrimary}"
        Foreground="{StaticResource ForegroundBrush}"
        Width="800"
        Height="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32" CornerRadius="0" GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource CardBg}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Pilot Personnel File" FontSize="13" Style="{StaticResource HeadingText}"
                           VerticalAlignment="Center" Margin="12,0,0,0"/>

                <Button Grid.Column="1" Name="BtnClose" Width="36" Height="24" Content="{StaticResource IconClose}"
                        Click="BtnClose_Click" ToolTip="Close"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,8,0"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Pilot Header -->
                <Border Grid.Row="0" Background="{StaticResource CardBg}"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Pilot Image -->
                        <Border Grid.Column="0" Width="120" Height="120" CornerRadius="60"
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="3"
                                Background="{StaticResource CardBg}" ClipToBounds="True"
                                Margin="0,0,30,0">
                            <Image Source="{Binding PilotImage}" Stretch="UniformToFill" />
                        </Border>

                        <!-- Pilot Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="{Binding Name}"
                                          Style="{StaticResource HeadingText}"
                                          FontSize="28"
                                          Margin="0,0,15,0"/>
                                <Border Background="{StaticResource AccentBrush}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding IsPlayer, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="YOU"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Age:" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                <TextBlock Grid.Column="1" Foreground="{StaticResource ForegroundBrush}">
                                    <Run Text="{Binding Age, Mode=OneWay}"/>
                                    <Run Text="years"/>
                                </TextBlock>
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Total Flight Hours:" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                <TextBlock Grid.Column="1" Foreground="{StaticResource ForegroundBrush}">
                                    <Run Text="{Binding TotalFlightHours, Mode=OneWay, StringFormat='{}{0:F0}'}"/>
                                    <Run Text="hours"/>
                                </TextBlock>
                            </Grid>

                            <Grid Margin="0,0,0,8"
                                  Visibility="{Binding IsPlayer, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Salary:" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                <TextBlock Grid.Column="1" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold">
                                    <Run Text="{Binding SalaryPerMonth, Mode=OneWay, StringFormat='{}{0:N0}'}"/>
                                    <Run Text="€ / month"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Licenses Section -->
                <Border Grid.Row="1" Background="{StaticResource CardBg}"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Licenses"
                                   Style="{StaticResource HeadingText}"
                                   FontSize="20" Margin="0,0,0,15"/>

                        <!-- Current Licenses -->
                        <ItemsControl ItemsSource="{Binding Licenses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BgPrimary}"
                                            CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Name}"
                                                      FontWeight="SemiBold" FontSize="14"
                                                      Foreground="{StaticResource ForegroundBrush}"/>
                                            <TextBlock Grid.Column="1" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12">
                                                <Run Text="Issued:"/>
                                                <Run Text="{Binding IssuedDate, StringFormat='dd.MM.yyyy'}"/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Type Ratings Section -->
                <Border Grid.Row="2" Background="{StaticResource CardBg}"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Type Ratings"
                                   Style="{StaticResource HeadingText}"
                                   FontSize="20" Margin="0,0,0,15"/>

                        <!-- Current Type Ratings -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding TypeRatings}" Margin="0,0,0,15">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BgPrimary}"
                                            CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding AircraftType}"
                                                      FontWeight="SemiBold" FontSize="14"
                                                      Foreground="{StaticResource ForegroundBrush}"/>
                                            <TextBlock Grid.Column="1" Foreground="{StaticResource SubtleForegroundBrush}" FontSize="12">
                                                <Run Text="Earned:"/>
                                                <Run Text="{Binding EarnedDate, StringFormat='dd.MM.yyyy'}"/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Add Type Rating (only for employed pilots) -->
                        <StackPanel Grid.Row="2" Visibility="{Binding CanPurchaseTraining, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Purchase Type Rating"
                                      Foreground="{StaticResource SubtleForegroundBrush}"
                                      FontSize="12" Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0"
                                         ItemsSource="{Binding AvailableTypeRatings}"
                                         SelectedItem="{Binding SelectedTypeRating}"
                                         Margin="0,0,10,0"
                                         Height="36"
                                         Padding="10,8">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock>
                                                    <Run Text="{Binding AircraftType}"/>
                                                    <Run Text=" - " Foreground="{StaticResource SubtleForegroundBrush}"/>
                                                    <Run Text="{Binding Price, StringFormat='{}{0:N0} €'}"
                                                         Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                                <Border Background="#4CAF50" CornerRadius="3" Padding="6,2" Margin="8,0,0,0"
                                                        Visibility="{Binding HasUnassignedAircraft, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="Im Hangar" Foreground="White" FontSize="10" FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <Button Grid.Column="1" Content="Purchase"
                                        Command="{Binding PurchaseTypeRatingCommand}"
                                        Width="120" Height="36"
                                        Padding="12,8"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.9"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Aircraft Assignment Section (only for employed pilots) -->
                <Border Grid.Row="3" Background="{StaticResource CardBg}"
                        CornerRadius="8" Padding="20" Margin="0,0,0,20"
                        Visibility="{Binding CanAssignAircraft, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Aircraft Assignment"
                                   Style="{StaticResource HeadingText}"
                                   FontSize="20" Margin="0,0,0,15"/>

                        <!-- Current Assignment -->
                        <Border Grid.Row="1" Background="{StaticResource BgPrimary}"
                                CornerRadius="6" Padding="12" Margin="0,0,0,15"
                                Visibility="{Binding HasAssignedAircraft, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding AssignedAircraftRegistration}"
                                              FontWeight="SemiBold" FontSize="14"
                                              Foreground="{StaticResource ForegroundBrush}"/>
                                    <TextBlock Text="{Binding AssignedAircraftType}"
                                              FontSize="12"
                                              Foreground="{StaticResource SubtleForegroundBrush}"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Unassign"
                                        Command="{Binding UnassignAircraftCommand}"
                                        Width="100" Height="32"
                                        Padding="10,6"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#D32F2F"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.9"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Assign Aircraft -->
                        <StackPanel Grid.Row="2"
                                    Visibility="{Binding CanSelectAircraft, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Assign to Aircraft"
                                      Foreground="{StaticResource SubtleForegroundBrush}"
                                      FontSize="12" Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0"
                                         ItemsSource="{Binding AvailableAircraft}"
                                         SelectedItem="{Binding SelectedAircraft}"
                                         Margin="0,0,10,0"
                                         Height="36"
                                         Padding="10,8">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="{Binding Registration}" FontWeight="SemiBold"/>
                                                <Run Text=" - " Foreground="{StaticResource SubtleForegroundBrush}"/>
                                                <Run Text="{Binding Type}"/>
                                                <Run Text=" @ " Foreground="{StaticResource SubtleForegroundBrush}"/>
                                                <Run Text="{Binding FboIcao}" Foreground="{StaticResource AccentBrush}"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <Button Grid.Column="1" Content="Assign"
                                        Command="{Binding AssignAircraftCommand}"
                                        Width="120" Height="36"
                                        Padding="12,8"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.9"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- No Aircraft Available Message -->
                        <TextBlock Grid.Row="2"
                                   Text="No aircraft available for assignment. Aircraft must be stationed at an FBO and have no pilot assigned."
                                   Foreground="{StaticResource SubtleForegroundBrush}"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding NoAircraftAvailable, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <!-- Balance Display (when purchasing is available) -->
                <Border Grid.Row="4" Background="{StaticResource CardBg}"
                        CornerRadius="8" Padding="20"
                        Visibility="{Binding CanPurchaseTraining, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <TextBlock HorizontalAlignment="Right">
                            <Run Text="Current Balance:" Foreground="{StaticResource SubtleForegroundBrush}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding Balance, StringFormat='{}{0:N0} €'}"
                                 Foreground="{StaticResource AccentBrush}"
                                 FontWeight="Bold" FontSize="18"/>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
