<UserControl x:Class="Ace.App.Views.Pilots.PersonnelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Ace.App.Controls"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{StaticResource CardBg}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0" Text="Personnel"
                           Style="{StaticResource HeadingText}"
                           FontSize="20"
                           VerticalAlignment="Center"/>

                <!-- View Toggle -->
                <ComboBox Grid.Column="2" x:Name="CmbViewToggle"
                          Width="160"
                          VerticalAlignment="Center"
                          SelectedIndex="0"
                          SelectionChanged="CmbViewToggle_SelectionChanged">
                    <ComboBoxItem Content="Employed Pilots"/>
                    <ComboBoxItem Content="Available Pilots"/>
                </ComboBox>

                <!-- Sort -->
                <ComboBox Grid.Column="4" x:Name="CmbSort"
                          Width="140"
                          VerticalAlignment="Center"
                          SelectedIndex="0"
                          SelectionChanged="CmbSort_SelectionChanged">
                    <ComboBoxItem Content="Name (A-Z)"/>
                    <ComboBoxItem Content="Name (Z-A)"/>
                    <ComboBoxItem Content="Age (Youngest)"/>
                    <ComboBoxItem Content="Age (Oldest)"/>
                    <ComboBoxItem Content="Salary (Low)"/>
                    <ComboBoxItem Content="Salary (High)"/>
                    <ComboBoxItem Content="Experience (Low)"/>
                    <ComboBoxItem Content="Experience (High)"/>
                </ComboBox>

                <!-- Create Button -->
                <Button Grid.Column="6" x:Name="BtnCreatePilot"
                        Content="+ Create"
                        Click="CreateButton_Click"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Style="{StaticResource SuccessButtonStyle}"/>

                <!-- Stats Badge -->
                <Border Grid.Column="8"
                        Background="{StaticResource BgSecondary}"
                        CornerRadius="4"
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TxtPilotCount"
                                   Text="0 Employed"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text=" â€¢ " Foreground="{StaticResource SubtleForegroundBrush}"/>
                        <TextBlock x:Name="TxtMonthlyCost"
                                   Text="â‚¬0/mo"
                                   Foreground="{StaticResource SubtleForegroundBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Content: Two-Column Layout -->
        <Grid Grid.Row="1" Background="{StaticResource BgPrimary}" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="480"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Pilot List -->
            <Border Grid.Column="0"
                    Background="{StaticResource CardBg}"
                    CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.3" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0"
                            Background="{StaticResource BgSecondary}"
                            CornerRadius="8,8,0,0"
                            Padding="12,10"
                            Cursor="Hand"
                            MouseLeftButtonDown="PilotListHeader_MouseDown">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="TxtExpandIcon" Text="â–¼" FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" x:Name="TxtPilotListHeader" Text="Employed Pilots (0)"
                                       FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Pilot Liste -->
                    <ScrollViewer Grid.Row="1"
                                  x:Name="PilotListScrollViewer"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="PilotListItems">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent"
                                            Padding="12,10"
                                            Cursor="Hand"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="0,0,0,1"
                                            MouseLeftButtonUp="OnPilotListItemClick">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Pilot Image -->
                                            <Border Grid.Column="0"
                                                    Width="48" Height="48"
                                                    Background="{StaticResource BgSecondary}"
                                                    CornerRadius="6"
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    ClipToBounds="True">
                                                <Grid>
                                                    <Image Source="{Binding PilotImage}"
                                                           Stretch="UniformToFill"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                                          Fill="{StaticResource SubtleForegroundBrush}"
                                                          Stretch="Uniform"
                                                          Width="28" Height="28"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Visibility="{Binding HasImage, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </Border>

                                            <StackPanel Grid.Column="1">
                                                <!-- Row 0: Name + Badges -->
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                    <controls:RankBadgeControl Rank="{Binding Rank}"
                                                                               BadgeSize="Small"
                                                                               VerticalAlignment="Center"
                                                                               Margin="0,0,6,0"
                                                                               ToolTip="{Binding RankName}"/>
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="Bold"
                                                               FontSize="14"
                                                               Foreground="{StaticResource AccentBrush}"
                                                               Margin="0,0,8,0"
                                                               TextTrimming="CharacterEllipsis"
                                                               MaxWidth="200"/>
                                                    <!-- YOU Badge -->
                                                    <Border Background="{StaticResource AccentBrush}" CornerRadius="3" Padding="5,2" Margin="0,0,4,0"
                                                            Visibility="{Binding IsPlayer, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <TextBlock Text="YOU" FontSize="9" Foreground="White" FontWeight="Bold"/>
                                                    </Border>
                                                    <!-- Status Badge (assigned) -->
                                                    <Border Background="#4CAF50" CornerRadius="3" Padding="5,2"
                                                            Visibility="{Binding HasStatus, Converter={StaticResource BoolToVisibilityConverter}}"
                                                            ToolTip="{Binding StatusDetail}">
                                                        <TextBlock Text="{Binding Status}" FontSize="9" Foreground="White" FontWeight="SemiBold"/>
                                                    </Border>
                                                </StackPanel>

                                                <!-- Row 1: Experience -->
                                                <TextBlock FontSize="12"
                                                           Foreground="{StaticResource ForegroundBrush}"
                                                           Margin="0,0,0,2">
                                                    <Run Text="{Binding TotalFlightHours, StringFormat='{}{0:N0}', Mode=OneWay}"/>
                                                    <Run Text=" h â€¢ "/>
                                                    <Run Text="{Binding TotalDistanceNM, StringFormat='{}{0:N0}', Mode=OneWay}"/>
                                                    <Run Text=" NM"/>
                                                </TextBlock>

                                                <!-- Row 2: Age + Salary -->
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="11" Foreground="{StaticResource SubtleForegroundBrush}">
                                                        <Run Text="{Binding Age, Mode=OneWay}"/>
                                                        <Run Text=" years"/>
                                                    </TextBlock>
                                                    <TextBlock Text=" â€¢ " FontSize="11" Foreground="{StaticResource SubtleForegroundBrush}"
                                                               Visibility="{Binding IsPlayer, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                    <TextBlock FontSize="11" Foreground="{StaticResource SubtleForegroundBrush}"
                                                               Visibility="{Binding IsPlayer, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                                        <Run Text="{Binding AdjustedSalary, StringFormat='{}{0:N0}', Mode=OneWay}"/>
                                                        <Run Text=" â‚¬/mo"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Column: Pilot Details -->
            <Border Grid.Column="2"
                    x:Name="PilotDetailsPanel"
                    Background="{StaticResource CardBg}"
                    CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.3" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0"
                            Background="{StaticResource BgSecondary}"
                            CornerRadius="8,8,0,0"
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Select Hint -->
                            <TextBlock x:Name="TxtSelectHint"
                                       Text="Select a pilot"
                                       FontSize="14"
                                       Foreground="{StaticResource SubtleForegroundBrush}"
                                       VerticalAlignment="Center"
                                       Visibility="Visible"/>

                            <!-- Header Content -->
                            <StackPanel x:Name="HeaderContent" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <controls:RankBadgeControl x:Name="DetailRankBadge"
                                                               BadgeSize="Medium"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>
                                    <TextBlock x:Name="TxtDetailName"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}"
                                               Margin="0,0,12,0"/>
                                    <Border x:Name="DetailPlayerBadge" Background="{StaticResource AccentBrush}"
                                            CornerRadius="4" Padding="8,3" Margin="0,0,0,0"
                                            VerticalAlignment="Center" Visibility="Collapsed">
                                        <TextBlock Text="YOU" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock x:Name="TxtDetailStatus" FontSize="14"
                                           Foreground="{StaticResource SubtleForegroundBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Details Content -->
                    <ScrollViewer Grid.Row="1" x:Name="DetailsContent" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                        <StackPanel>
                            <!-- Pilot Image -->
                            <Border Padding="16,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <Grid Height="180">
                                    <Border Background="{StaticResource BgSecondary}" CornerRadius="8">
                                        <Grid>
                                            <Image x:Name="ImgDetailPilot"
                                                   Stretch="Uniform"
                                                   Margin="16"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                            <Path x:Name="DetailPilotIcon"
                                                  Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                                  Fill="{StaticResource SubtleForegroundBrush}"
                                                  Stretch="Uniform"
                                                  Width="80" Height="80"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Visibility="Visible"/>
                                        </Grid>
                                    </Border>
                                    <Button x:Name="BtnEditImage" Content="ðŸ“·"
                                            HorizontalAlignment="Right" VerticalAlignment="Top"
                                            Width="28" Height="28" Padding="0" Margin="0,-4,-4,0"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            FontSize="12" Click="EditImageButton_Click"
                                            ToolTip="Change Image"/>
                                </Grid>
                            </Border>

                            <!-- Basic Info -->
                            <Border Padding="16,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
                                        <TextBlock Text="Age" FontSize="10" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                        <TextBlock x:Name="TxtDetailAge" FontSize="13" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                                        <TextBlock Text="Experience" FontSize="10" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                        <TextBlock x:Name="TxtDetailExperience" FontSize="13" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,8">
                                        <TextBlock Text="Rank" FontSize="10" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                        <TextBlock x:Name="TxtDetailRankFull" FontSize="13" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" x:Name="SalarySection">
                                        <TextBlock Text="Monthly Salary" FontSize="10" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                        <TextBlock x:Name="TxtDetailSalary" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="0">
                                        <TextBlock Text="Birthday" FontSize="10" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                        <TextBlock x:Name="TxtDetailBirthday" FontSize="13" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="1">
                                        <TextBlock Text="Employed" FontSize="10" Foreground="{StaticResource SubtleForegroundBrush}"/>
                                        <TextBlock x:Name="TxtDetailEmployed" FontSize="13" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Licenses Section -->
                            <Border Padding="16,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Text="Licenses" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,8"/>
                                    <ItemsControl x:Name="LicensesList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource BgSecondary}" CornerRadius="4" Padding="8,6" Margin="0,0,0,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12"/>
                                                        <TextBlock Grid.Column="1" FontSize="10" Foreground="{StaticResource SubtleForegroundBrush}">
                                                            <Run Text="{Binding IssuedDate, StringFormat='dd.MM.yyyy'}"/>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock x:Name="TxtNoLicenses" Text="No licenses" FontSize="11"
                                               Foreground="{StaticResource SubtleForegroundBrush}" Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>

                            <!-- Type Ratings Section -->
                            <Border Padding="16,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Text="Type Ratings" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,8"/>
                                    <ItemsControl x:Name="TypeRatingsList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource BgSecondary}" CornerRadius="4" Padding="8,6" Margin="0,0,0,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding AircraftType}" FontWeight="SemiBold" FontSize="12"/>
                                                        <TextBlock Grid.Column="1" FontSize="10" Foreground="{StaticResource SubtleForegroundBrush}">
                                                            <Run Text="{Binding EarnedDate, StringFormat='dd.MM.yyyy'}"/>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock x:Name="TxtNoTypeRatings" Text="No type ratings" FontSize="11"
                                               Foreground="{StaticResource SubtleForegroundBrush}" Visibility="Collapsed"/>

                                    <!-- Purchase Type Rating (only for employed) -->
                                    <StackPanel x:Name="PurchaseTypeRatingSection" Visibility="Collapsed" Margin="0,10,0,0">
                                        <TextBlock Text="Purchase Type Rating" FontSize="11"
                                                   Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,6"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox x:Name="CmbTypeRatings" Height="36" Padding="8,6"/>
                                            <Button Grid.Column="2" Content="Buy" Width="80" Height="36"
                                                    Click="BuyTypeRating_Click"
                                                    Style="{StaticResource PrimaryButtonStyle}"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Aircraft Assignment Section (only for employed) -->
                            <Border x:Name="AssignmentSection" Padding="16,12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock Text="Aircraft Assignment" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,8"/>

                                    <!-- Current Assignment -->
                                    <Border x:Name="CurrentAssignmentPanel" Background="{StaticResource BgSecondary}"
                                            CornerRadius="4" Padding="10,8" Margin="0,0,0,8" Visibility="Collapsed">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock x:Name="TxtAssignedAircraft" FontWeight="SemiBold" FontSize="12"/>
                                                <TextBlock x:Name="TxtAssignedAircraftType" FontSize="11"
                                                           Foreground="{StaticResource SubtleForegroundBrush}"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="Unassign" Height="28" Padding="10,4"
                                                    Click="UnassignAircraft_Click"
                                                    Style="{StaticResource DangerButtonStyle}"/>
                                        </Grid>
                                    </Border>

                                    <!-- Assign Aircraft -->
                                    <StackPanel x:Name="AssignAircraftPanel" Visibility="Collapsed">
                                        <TextBlock Text="Assign to Aircraft" FontSize="11"
                                                   Foreground="{StaticResource SubtleForegroundBrush}" Margin="0,0,0,6"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox x:Name="CmbAvailableAircraft" Height="36" Padding="8,6"/>
                                            <Button Grid.Column="2" Content="Assign" Width="90" Height="36"
                                                    Click="AssignAircraft_Click"
                                                    Style="{StaticResource PrimaryButtonStyle}"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- No Aircraft Available -->
                                    <TextBlock x:Name="TxtNoAircraftAvailable"
                                               Text="No aircraft available. Aircraft must be stationed at an FBO."
                                               FontSize="11" Foreground="{StaticResource SubtleForegroundBrush}"
                                               TextWrapping="Wrap" Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>

                            <!-- Actions -->
                            <Border Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Button Grid.Row="0" Grid.Column="0"
                                            Content="Edit"
                                            Click="EditButton_Click"
                                            Height="36"
                                            Style="{StaticResource PrimaryButtonStyle}"/>

                                    <Button Grid.Row="0" Grid.Column="2" x:Name="BtnHireFire"
                                            Content="Fire"
                                            Click="HireFireButton_Click"
                                            Height="36"
                                            Style="{StaticResource DangerButtonStyle}"/>

                                    <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" x:Name="BtnDelete"
                                            Content="Delete"
                                            Click="DeleteButton_Click"
                                            Height="36"
                                            Style="{StaticResource DangerButtonStyle}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
