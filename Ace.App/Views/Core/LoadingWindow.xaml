<Window x:Class="Ace.App.Views.Core.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aviation Career Economy is loading..."
        Width="500"
        Height="200"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        AllowsTransparency="True">
    <Border BorderBrush="#2196F3" BorderThickness="2" CornerRadius="8" Background="#1E1E1E">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                      Text="Aviation Career Economy is initializing..."
                      FontSize="20"
                      FontWeight="SemiBold"
                      Foreground="White"
                      HorizontalAlignment="Center"/>

            <TextBlock x:Name="StatusText"
                      Grid.Row="2"
                      Text="Starting application..."
                      FontSize="14"
                      Foreground="#BBBBBB"
                      HorizontalAlignment="Center"/>

            <ProgressBar Grid.Row="4"
                        Height="8"
                        IsIndeterminate="True"
                        Foreground="#2196F3"
                        Background="#333333"/>
        </Grid>
    </Border>
</Window>
