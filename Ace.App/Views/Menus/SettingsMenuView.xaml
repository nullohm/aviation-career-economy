<UserControl x:Class="Ace.App.Views.Menus.SettingsMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid>
        <TabControl>
            <TabItem Header="General">
                <ContentControl x:Name="SettingsContent" />
            </TabItem>
            <TabItem Header="SimConnect">
                <StackPanel Margin="12">
                    <TextBlock Foreground="LightGray">SimConnect Settings (placeholder)</TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
