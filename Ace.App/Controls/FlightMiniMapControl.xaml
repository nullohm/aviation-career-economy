<UserControl x:Class="Ace.App.Controls.FlightMiniMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
             xmlns:controls="clr-namespace:Ace.App.Controls"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <Border Background="{DynamicResource CardBg}" CornerRadius="8" ClipToBounds="True" Cursor="Hand">
        <Grid>
            <mapsui:MapControl x:Name="MapControl" IsHitTestVisible="False" Background="#1A1A2E"/>
            <Border Background="#80000000" CornerRadius="4" Padding="6,3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8">
                <TextBlock x:Name="TxtClickHint" Text="Click to expand" FontSize="10" Foreground="White" Opacity="0.7"/>
            </Border>
            <controls:MapScaleControl x:Name="ScaleControl" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="8"/>
        </Grid>
    </Border>
</UserControl>
